#!/usr/bin/env bash
# Swaps between mpd and mopidy.
#
# Author: metakirby5

if pgrep -x mpd &>/dev/null; then
  echo "Starting mopidy..."
  killall mpd
  sleep 0.5
  mopidy &>/dev/null &
elif pgrep -x mopidy &>/dev/null; then
  echo "Starting mpd..."
  killall mopidy
  sleep 0.5
  mpd &>/dev/null &
else # default to mpd
  echo "No mpd-like daemons running, starting mpd..."
  mpd &>/dev/null &
fi

sleep 0.5
startbar &>/dev/null

